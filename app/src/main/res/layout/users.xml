<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
    tools:context="com.example.wang.myandroidproject.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">
        <ImageView
            android:id="@+id/h_back"
            android:layout_width="match_parent"
            android:layout_height="180dp" />
        <ImageView
            android:id="@+id/h_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/h_back"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/user_line"
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_centerHorizontal="true"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/user_line"
                android:textSize="17sp"
                android:textColor="@color/slateblue"
                android:text=""/>

            <TextView
                android:id="@+id/tv_userid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="17sp"
                android:textColor="@color/slateblue"
                android:layout_toRightOf="@id/user_line"
                android:text=""/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent">
        <ImageView
            android:id="@+id/icon1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/publish"/>
        <Button
            android:id="@+id/button_publish"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/icon1"
            android:layout_marginRight="0dp"
            android:background="@color/transparent"
            android:gravity="start|center"
            android:textSize="20sp"
            android:text="我发布的"
            />
        <View
            android:id="@+id/block2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/button_publish"
            android:layout_marginLeft="60dp"
            android:background="#330000"/>
        <ImageView
            android:id="@+id/icon2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/block2"
            android:src="@mipmap/order"/>
        <Button
            android:id="@+id/button_task"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/transparent"
            android:layout_below="@id/block2"
            android:layout_toRightOf="@id/icon2"
            android:gravity="start|center"
            android:textSize="20sp"
            android:text="我的接单" />
        <View
            android:id="@+id/block3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/button_task"
            android:layout_marginLeft="50dp"
            android:background="#330000" />
        <ImageView
            android:id="@+id/icon3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/block3"
            android:src="@mipmap/sold"/>
        <Button
            android:id="@+id/button_sold"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/transparent"
            android:layout_below="@id/block3"
            android:layout_toRightOf="@id/icon3"
            android:gravity="start|center"
            android:textSize="20sp"
            android:text="正在出售" />
        <View
            android:id="@+id/block4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/button_sold"
            android:layout_marginLeft="50dp"
            android:background="#330000" />
        <ImageView
            android:id="@+id/icon4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/block4"
            android:src="@mipmap/buy"/>
        <Button
            android:id="@+id/button_buy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/transparent"
            android:layout_below="@id/block4"
            android:layout_toRightOf="@id/icon4"
            android:gravity="start|center"
            android:textSize="20sp"
            android:text="我买到的" />
        <View
            android:id="@+id/block5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/button_buy"
            android:layout_marginLeft="50dp"
            android:background="#330000" />
        <ImageView
            android:id="@+id/icon5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/block5"
            android:src="@mipmap/changeinfo"/>
        <Button
            android:id="@+id/button_change_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/transparent"
            android:gravity="start|center"
            android:layout_toRightOf="@+id/icon5"
            android:layout_below="@id/block5"
            android:textSize="20sp"
            android:text="修改个人信息" />

        <View
            android:id="@+id/block6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/button_change_info"
            android:layout_marginLeft="50dp"
            android:background="#330000" />
        <ImageView
            android:id="@+id/icon6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/block6"
            android:src="@mipmap/exit"/>
        <Button
            android:id="@+id/button_exit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/transparent"
            android:gravity="start|center"
            android:layout_toRightOf="@+id/icon6"
            android:layout_below="@id/block6"
            android:textSize="20sp"
            android:text="退出登录" />
        <TextView
            android:id="@+id/num_of_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/block2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="13dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="18dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/num_of_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/block3"
            android:layout_alignLeft="@+id/num_of_publish"
            android:layout_alignStart="@+id/num_of_publish"
            android:layout_marginBottom="13dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/num_of_sold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/block4"
            android:layout_alignLeft="@+id/num_of_task"
            android:layout_alignStart="@+id/num_of_task"
            android:layout_marginBottom="13dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/num_of_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/block5"
            android:layout_alignLeft="@+id/num_of_sold"
            android:layout_alignStart="@+id/num_of_sold"
            android:layout_marginBottom="13dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/num_of_publish"
            android:layout_alignBottom="@+id/num_of_publish"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/num_of_task"
            android:layout_toRightOf="@+id/num_of_task"
            android:textSize="30sp"
            android:text="@string/右指向" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/num_of_task"
            android:layout_alignBottom="@+id/num_of_task"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:textSize="30sp"
            android:text="@string/右指向" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/num_of_sold"
            android:layout_alignBottom="@+id/num_of_sold"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:textSize="30sp"
            android:text="@string/右指向" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/num_of_buy"
            android:layout_alignBottom="@+id/num_of_buy"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignStart="@+id/textView9"
            android:textSize="30sp"
            android:text="@string/右指向" />
        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button_change_info"
            android:layout_alignBottom="@+id/button_change_info"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:textSize="30sp"
            android:text="@string/右指向" />
